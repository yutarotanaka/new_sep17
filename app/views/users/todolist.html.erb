<h3>TodoList</h3>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title></title>
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="/resources/demos/style.css">
  <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
  <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  <script>
  $( function() {
    $( "#datepicker" ).datepicker();
  } );
  </script>
</head>

<body>
    
    <div><b>From Teacher</b></div>
    
    <% @user = User.find_by(id: session[:user_id]) %>

    <% @user.todos_universal.each do |todo| %>
    
        <%= todo.deadline %>
        
        <li><input type="checkbox"><b><%= link_to(todo.title, "/users/todos/#{todo.id}") %></b></li>
    
    <% end %>
    
    </br>
    
    <% if session[:user_id] == 1 %>
    
    <% else %>
    
        <div><b>Yours</b></div>
    
            <% @user.todos.each do |todo| %>
            
            <%= todo.deadline %>
    
            <li><%= link_to(todo.title, "/users/todos/#{todo.id}") %></li>
        
        <% end %>
        
    <% end %>
    
    </br>
    
    <% if session[:user_id] == 1 %>
    
        <div><b>Universal Todo</b></div>
    
        <%= form_tag("/users/todos/create_universal") do %>
            <div>Deadline</div>
            <input type="text" id="datepicker" name="deadline">
            </br>
            <div>Titile</div>
            <input name="title">
            </br>
            <div>Content</div>
            <textarea name="content"></textarea>
            <input type="submit" value="confirm">
        <% end %>
        
    <% else %>
    
        <div><b>Add New Todo</b></div>
    
        <%= form_tag("/users/todos/create") do %>
            <div>Deadline</div>
            <input type="text" id="datepicker" name="deadline">
            </br>
            <div>Titile</div>
            <input name="title">
            </br>
            <div>Content</div>
            <textarea name="content"></textarea>
            <input type="submit" value="confirm">
        <% end %>
    
    <% end %>
    
</body>

